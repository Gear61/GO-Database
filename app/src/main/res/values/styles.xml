<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/app_red</item>
        <item name="colorPrimaryDark">@color/dark_red</item>
        <item name="colorAccent">@color/app_red</item>
    </style>

    <style name="text_input">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:background">@drawable/text_input_border</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="input_icon">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/app_red</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
