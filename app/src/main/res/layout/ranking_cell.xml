<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/pokemon_ranking"
        android:gravity="center_horizontal"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:background="@drawable/dark_gray_border"
        android:textSize="24dp"
        android:textColor="@color/dark_gray"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/pokemon_icon"
        android:layout_toRightOf="@id/pokemon_ranking"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="8dp"
        android:contentDescription="@string/pokemon"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/pokemon_stat"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        android:padding="4dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/pokemon_name"
        android:layout_toRightOf="@id/pokemon_icon"
        android:layout_toLeftOf="@id/pokemon_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textColor="@color/dark_gray"
        android:layout_centerVertical="true"/>
</RelativeLayout>