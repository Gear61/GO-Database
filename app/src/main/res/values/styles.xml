<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/app_red</item>
        <item name="colorPrimaryDark">@color/dark_red</item>
        <item name="colorAccent">@color/app_red</item>
    </style>

    <style name="no_action_bar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/app_red</item>
        <item name="colorPrimaryDark">@color/dark_red</item>
        <item name="colorAccent">@color/app_red</item>
    </style>

    <style name="text_input">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:background">@drawable/text_input_border</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="input_icon">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/app_red</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="clear_icon" parent="input_icon">
        <item name="android:text">@string/clear_icon</item>
        <item name="android:layout_gravity">center_vertical|end</item>
    </style>

    <style name="ripple_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/ripple_button</item>
    </style>

    <style name="button_ripple_attributes">
        <item name="rd_rippleType">touch</item>
        <item name="rd_backgroundAnimDuration">0</item>
        <item name="rd_backgroundColor">@android:color/transparent</item>
        <item name="rd_maxRippleRadius">match_view</item>
        <item name="rd_rippleAnimDuration">@integer/shorter_anim_length</item>
        <item name="rd_delayClick">untilRelease</item>
    </style>

    <style name="input_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="pokemon_gallery_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="layoutManager">android.support.v7.widget.LinearLayoutManager</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:scrollbars">horizontal</item>
        <item name="android:scrollbarSize">3dp</item>
    </style>

    <style name="add_pokemon_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">28dp</item>
    </style>

    <style name="add_button_container">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/add_button_background</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="add_journal_icon">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/journal_icon</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="add_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/add</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="pokemon_preview_icon">
        <item name="android:background">@drawable/pokemon_cell_background</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="action_icon">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="action_item">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="vote_icon">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">36dp</item>
    </style>
</resources>
