<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:mrl_rippleColor="@color/gray"
    app:mrl_rippleInAdapter="true"
    app:mrl_rippleDuration="250"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/pokemon_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="8dp"
            android:contentDescription="@string/pokemon"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/pokemon_chance"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"
            android:padding="4dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/pokemon_name"
            android:layout_toRightOf="@id/pokemon_icon"
            android:layout_toLeftOf="@id/pokemon_chance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textColor="@color/dark_gray"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</com.balysv.materialripple.MaterialRippleLayout>
